import java.util.Scanner;

public class TwoPointOneFive{
	public static void main(String[] args){
		Scanner userInput = new Scanner(System.in);
		
		int userNumber1, userNumber2, sum, product, difference, quotient;
		
		System.out.println("Enter the first number");
		userNumber1 = userInput.nextInt();
		
		System.out.println("Enter the second number");
		userNumber2 = userInput.nextInt();
		
		sum = userNumber1 + userNumber2;
		product = userNumber1 * userNumber2;
		difference = userNumber1 - userNumber2;
		quotient = userNumber1 / userNumber2;
		
		System.out.printf("The Sum = %d,%nThe Product = %d,%nThe Difference = %d,%nThe Quotient = %d%n", sum, product, difference, quotient);
	}
}
