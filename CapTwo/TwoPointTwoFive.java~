import java.util.Scanner;

public class TwoPointTwoFive{
	public static void main(String[] args){
		Scanner userInput = new Scanner(System.in);

		System.out.println("Enter your integer");		
		int userInteger = userInput.nextInt();
		
		if ((userInteger % 2) == 0){
			System.out.printf("The number you entered (%d) is an even number%n", userInteger);
		}
		if ((userInteger % 2) != 0){
			System.out.printf("The integer you entered (%d) is an odd number.%n", userInteger);
		}
	}
}
